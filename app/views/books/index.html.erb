<p id="notice"></p>
<h1>Books</h1>
<!-- 一覧ページ -->


   <table>
     <thead>
       <tr>
       	 <th>Title</th>
       	 <th>Body</th>
       	 <th colspan="3"></th>
       </tr>
     </thead>

     <tbody>
     	<% @lists.each do |list| %>
	     	<tr>
	         <td><%= list.title %></td>
	         <td><%= list.body %></td>
	          <td><%= link_to "Show", book_path(list.id) %>
	          	  <%= link_to "Edit", edit_book_path(list.id) %>
                  <%= link_to "Destroy", book_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %>
	          </td>
	    	</tr>

    	<% end %>
     </tbody>
   </table>


<h1>New book</h1>
<!-- form_for部分 --> <!--  投稿ページ -->
<%= flash[:notice] %>
<%= form_for(@list) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <div>
    <%= f.text_area :body %>
</div>
    <div>
    <%= f.submit 'CreateBook' %>
</div>

<% end %>


